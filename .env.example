# OrQuanta Agentic v1.0 — Environment Variables
# Copy this to .env and fill in your values.
#
# Quick start (demo mode — no real cloud needed):
#   cp .env.example .env
#   python start_orquanta.py --demo

APP_NAME=OrQuanta
APP_ENV=development           # development | production
LOG_LEVEL=INFO
PORT=8000

# ── Demo Mode ──────────────────────────────────────────────────────────
DEMO_MODE=false               # Set to true for simulated cloud (no API keys needed)
DEMO_SECRET=orquanta-demo-2026

# ── LLM (pick one) ─────────────────────────────────────────────────────
OPENAI_API_KEY=sk-...         # For GPT-4o (recommended)
GOOGLE_API_KEY=...            # For Gemini Pro (alternative)
ANTHROPIC_API_KEY=sk-ant-...  # For Claude (optional)
LLM_MODEL=gpt-4o              # Default model for orchestration

# ── Cloud GPU Providers ────────────────────────────────────────────────
# Lambda Labs (RECOMMENDED FIRST — simplest API, affordable)
LAMBDA_LABS_API_KEY=...
LAMBDA_LABS_SSH_KEY_NAME=orquanta-default

# AWS (EC2 GPU instances / SageMaker)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# GCP (Vertex AI / Compute Engine)
GCP_PROJECT_ID=...
GCP_SERVICE_ACCOUNT_JSON=...
GCP_REGION=us-central1

# Azure (Azure ML / NC VMs)
AZURE_SUBSCRIPTION_ID=...
AZURE_TENANT_ID=...
AZURE_CLIENT_ID=...
AZURE_CLIENT_SECRET=...
AZURE_RESOURCE_GROUP=orquanta-prod

# CoreWeave
COREWEAVE_API_KEY=...
COREWEAVE_NAMESPACE=orquanta

# ── Database ───────────────────────────────────────────────────────────
# PostgreSQL (production)
DATABASE_URL=postgresql+asyncpg://orquanta:password@localhost:5432/orquanta_v1
# SQLite (local dev — no Postgres needed)
# DATABASE_URL=sqlite+aiosqlite:///./orquanta_dev.db

# ── Redis (caching + job queues) ──────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20

# ── Security ──────────────────────────────────────────────────────────
JWT_SECRET=change-this-to-a-random-256-bit-secret-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
ENCRYPTION_KEY=...
RATE_LIMIT_RPM=60

# ── Stripe Billing ────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_STARTER_PRICE_ID=price_...
STRIPE_PRO_PRICE_ID=price_...
STRIPE_USAGE_METER_ID=...

# ── Email Notifications ───────────────────────────────────────────────
SENDGRID_API_KEY=SG....
EMAIL_FROM=alerts@orquanta.ai
EMAIL_FROM_NAME=OrQuanta

# ── Monitoring ────────────────────────────────────────────────────────
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=...

# ── Deployment ────────────────────────────────────────────────────────
S3_BUCKET=orquanta-artifacts
S3_REGION=us-east-1
DOCKER_REGISTRY=orquanta
DOCKER_TAG=latest

# ── Feature Flags ─────────────────────────────────────────────────────
ENABLE_COST_OPTIMIZER=true
ENABLE_SELF_HEALING=true
ENABLE_AUDIT_AGENT=true
ENABLE_SPOT_PRICE_POLLING=true
SPOT_PRICE_POLL_INTERVAL_S=60
HEALING_THRESHOLD_VRAM_PCT=95
HEALING_RESPONSE_TIMEOUT_S=10
OOM_Z_SCORE_THRESHOLD=3.0
