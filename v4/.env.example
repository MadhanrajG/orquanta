# BomaX Agentic v4.0 — Environment Variables
# Copy to .env and fill in real values before running

# ─── API Keys ───────────────────────────────────────────────────────────
BOMAX_API_KEY=dev-key-change-in-production
JWT_SECRET=bomax-jwt-secret-change-in-production-use-256bit

# ─── LLM Provider ───────────────────────────────────────────────────────
# Options: mock | openai | anthropic
LLM_PROVIDER=mock
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ─── Database ───────────────────────────────────────────────────────────
DATABASE_URL=postgresql://bomax:bomax-secure-2026@localhost:5432/bomax
POSTGRES_PASSWORD=bomax-secure-2026

# ─── Redis ──────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── ChromaDB ───────────────────────────────────────────────────────────
CHROMA_HOST=localhost
CHROMA_PORT=8200

# ─── Admin User ─────────────────────────────────────────────────────────
ADMIN_EMAIL=admin@bomax.ai
ADMIN_PASSWORD=bomax-admin-2026

# ─── Safety Governor ────────────────────────────────────────────────────
SAFETY_AUTO_APPROVE_USD=100.0
SAFETY_MAX_DAILY_SPEND_USD=5000.0
SAFETY_RATE_LIMIT_PER_MINUTE=30
SAFETY_OVERRIDE_TOKEN=bomax-admin-override

# ─── API Rate Limiting ───────────────────────────────────────────────────
API_RATE_LIMIT_REQUESTS=60
API_RATE_LIMIT_WINDOW_S=60

# ─── Healing Agent ───────────────────────────────────────────────────────
HEALER_MONITOR_INTERVAL_S=10.0
HEALER_OOM_THRESHOLD_PCT=97.0
HEALER_ZSCORE_THRESHOLD=3.0
HEALER_MAX_RESTARTS=3

# ─── Forecast Agent ─────────────────────────────────────────────────────
FORECAST_INTERVAL_HOURS=6

# ─── Legacy Bridge ──────────────────────────────────────────────────────
LEGACY_BRIDGE_ENABLED=true

# ─── Cloud Providers ────────────────────────────────────────────────────
USE_REAL_PROVIDERS=false
# AWS
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_DEFAULT_REGION=us-east-1
# GCP
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# Azure
AZURE_SUBSCRIPTION_ID=...
AZURE_CLIENT_ID=...
AZURE_CLIENT_SECRET=...
# CoreWeave
COREWEAVE_API_KEY=...

# ─── Notifications ───────────────────────────────────────────────────────
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# ─── Monitoring ─────────────────────────────────────────────────────────
GRAFANA_PASSWORD=bomax-grafana-2026

# ─── CORS ───────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ─── Application ────────────────────────────────────────────────────────
PORT=8000
ENV=production
JWT_EXPIRE_HOURS=24
ORCHESTRATOR_MAX_ITERATIONS=10
